{
  "name": "nurtur-design",
  "description": "Design System following open-wc recommendations",
  "license": "MIT",
  "author": "Dustin Heisey",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "lint:js": "npx eslint .",
    "lint:css": "npx stylelint **/**/*.css",
    "lint": "npm run lint:js && npm run lint:css",
    "format:css": "npx stylelint **/**/*.css --fix",
    "format:js": "npx eslint . --config --fix",
    "format": "npm run format:js && npm run format:css",
    "prettier": "prettier . --write",
    "prepare": "husky",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "storybook dev -p 8080",
    "storybook:build": "storybook build",
    "build": "rimraf dist && tsc && rollup -c rollup.config.js && npm run analyze -- --exclude dist",
    "start:build": "web-dev-server --root-dir dist --app-index index.html --open",
    "analyze": "cem analyze --litelement",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"web-dev-server\""
  },
  "dependencies": {
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.10.3",
    "@eslint/js": "^9.14.0",
    "@open-wc/eslint-config": "^12.0.3",
    "@open-wc/testing": "^4.0.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@storybook/addon-a11y": "^8.4.2",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/web-components": "^8.4.2",
    "@storybook/web-components-vite": "^8.4.2",
    "@types/eslint__js": "^8.42.3",
    "@types/mocha": "^10.0.9",
    "@typescript-eslint/parser": "^8.14.0",
    "@web/dev-server": "^0.4.6",
    "@web/rollup-plugin-html": "^2.3.0",
    "@web/rollup-plugin-import-meta-assets": "^2.2.1",
    "@web/test-runner": "^0.19.0",
    "babel-plugin-template-html-minifier": "^4.1.0",
    "concurrently": "^9.1.0",
    "deepmerge": "^4.3.1",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "rollup": "^4.26.0",
    "rollup-plugin-esbuild": "^6.1.1",
    "rollup-plugin-workbox": "^8.1.1",
    "storybook": "^8.4.2",
    "tslib": "^2.8.1",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.14.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "customElements": "custom-elements.json"
}
