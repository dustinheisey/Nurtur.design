{
  "name": "nurtur.design",
  "version": "0.1.0",
  "description": "Performant, low carbon, accessible website design system",
  "scripts": {
    "start": "npx @11ty/eleventy --serve --quiet --incremental",
    "build": "rm -rf _site && npx @11ty/eleventy",
    "assets": "svgo -f ./public/svg -o ./_site/svg && pwa-asset-generator ./public/favicon.svg ./_site/favicon --opaque false --favicon --type png --index && pwa-asset-generator ./public/favicon.svg ./_site/favicon --background '#1a110f' --padding '10%' --icon-only && pwa-asset-generator ./public/favicon.svg ./_site/favicon --background '#1a110f' --splash-only --type png --padding '10%'",
    "lint:js": "npx eslint **/*.js --fix",
    "lint:css": "npx stylelint \"**/*.css\" --fix",
    "lint": "npm run lint:js && npm run lint:css",
    "format": "prettier \"**/*.{cjs,html,js,json,md,njk,css}\" --ignore-path ./.eslintignore --write",
    "styles": "postcss styles/index.css -o styles/index.min.css --watch",
    "scripts": "rollup -c rollup.config.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-img": "^3.1.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@quasibit/eleventy-plugin-sitemap": "^2.2.0",
    "eleventy-plugin-pwa-v2": "^1.0.2",
    "eleventy-plugin-svg-sprite": "^2.4.2"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "a11y-sitechecker": "^6.1.0",
    "cssnano": "^7.0.6",
    "cssnano-preset-advanced": "^7.0.6",
    "html-minifier": "^4.0.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-preset-env": "^10.0.8",
    "prettier": "^3.3.3",
    "pwa-asset-generator": "^6.4.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1"
  },
  "author": "Dustin Heisey",
  "license": "MIT"
}
