{
  "name": "nurtur.design",
  "type": "module",
  "version": "0.1.0",
  "description": "Performant, low carbon, accessible website design system",
  "scripts": {
    "start": "npx @11ty/eleventy --config config/eleventy.config.js --serve --quiet --incremental",
    "build": "rm -rf _site && npx @11ty/eleventy",
    "assets": "svgo -f ./public/svg -o ./_site/svg && pwa-asset-generator ./public/favicon.svg ./_site/favicon --opaque false --favicon --type png --index && pwa-asset-generator ./public/favicon.svg ./_site/favicon --background '#1a110f' --padding '10%' --icon-only && pwa-asset-generator ./public/favicon.svg ./_site/favicon --background '#1a110f' --splash-only --type png --padding '10%'",
    "lint:js": "npx eslint . --config ./config/eslint.config.js",
    "lint:css": "npx stylelint **/**/*.css --config ./config/stylelint.config.js",
    "lint": "npm run lint:js && npm run lint:css",
    "format:css": "npx stylelint **/**/*.css --config ./config/stylelint.config.js --fix",
    "format:js": "npx eslint . --config ./config/eslint.config.js --fix",
    "format": "npm run format:js && npm run format:css",
    "prettier": "prettier . --config ./config/prettier.config.js --write",
    "styles": "postcss --config ./config/postcss.config.js styles/index.css -o styles/index.min.css --watch",
    "scripts": "npx terser scripts/index.js -o scripts/index.min.js"
  },
  "dependencies": {
    "@11ty/eleventy": "^3.0.0",
    "@11ty/eleventy-img": "^5.0.0",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@11ty/eleventy-plugin-inclusive-language": "^1.0.3",
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "eleventy-plugin-pwa-v2": "^1.0.2",
    "eleventy-plugin-svg-sprite": "^2.4.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "cssnano": "^7.0.6",
    "cssnano-preset-advanced": "^7.0.6",
    "eslint": "^9.13.0",
    "globals": "^15.11.0",
    "html-minifier": "^4.0.0",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "postcss-easy-import": "^4.0.0",
    "postcss-preset-env": "^10.0.8",
    "prettier": "^3.3.3",
    "pwa-asset-generator": "^6.4.0",
    "stylelint": "^16.10.0",
    "stylelint-config-standard": "^36.0.1",
    "terser": "^5.36.0"
  },
  "author": "Dustin Heisey",
  "license": "MIT"
}
